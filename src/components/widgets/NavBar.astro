---
import NavBarItem from "~/components/widgets/NavBarItem.astro";
import NavBarDropdown from "~/components/widgets/NavBarDropdown.astro";
---

<script>
    import "bootstrap/dist/js/bootstrap.bundle.min.js";
</script>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
    <div class="container">
        <a class="navbar-brand" href="#">
            <img
                src="https://placeholder.pics/svg/150x50/888888/EEE/Logo"
                alt="..."
                height="36"
            />
        </a>
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto">
                <NavBarItem label="Home" link="/" state="active" />
                <NavBarItem label="About Us" link="about" />
                <NavBarDropdown label="Courses" link="courses" />
            </ul>
        </div>
    </div>
</nav>
