---
// TODO: Maybe change dropdown to Offcanvas??
const { label = "Dropdown", link = "#" } = Astro.props;
var state = ""
if (Astro.url.pathname == link) {
    state = "nav-link active";
}
else {
    state = "nav-link";
}
---

<li class="nav-item">
    <div class="btn-group dropdown" role="group">
        <a class={state} role="button" href={link} id="navbarDropdownLink">
            {label}
        </a>
        <button
            id="navbarDropdownButton"
            class="btn btn-dark dropdown-toggle dropdown-toggle-split"
            data-bs-toggle="dropdown"
            data-bs-reference="parent"
            aria-expanded="false"
        >
            <span class="visually-hidden">Toggle Dropdown</span>
        </button>
        <ul
            class="dropdown-menu dropdown-menu-dark"
            aria-labelledby="navbarDropdownLink"
        >
            <li><a class="dropdown-item" href="ASL-1">ASL 1</a></li>
            <li><a class="dropdown-item" href="ASL-2">ASL 2</a></li>
            <li><a class="dropdown-item" href="ASL-3">ASL 4</a></li>
            <li><a class="dropdown-item" href="ASL-4">ASL 4</a></li>
        </ul>
    </div>
</li>
