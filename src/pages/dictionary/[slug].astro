  //   },
  //   {
  //     slug: "astrohandbook",
  //     title: "The ultimative Astro handbook",
  //     text: "If you want to learn Astro, you must read this book.",
  //   },
  // ];
  return await pages.map((page) => {
    return {
      params: { slug: page["slug"] },
      props: { Sign: page["component"] },
    };
  });
}

